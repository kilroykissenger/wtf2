<div id="home_container">

  <img src="logo.gif" alt="logo"/>

  <% if flash[:error] %>
      <div class="error">
        <%= flash[:error] %>
      </div>
  <% end %>
  <br/>

  <div id="join_btn">
    <a href="#">Join a Party</a>
    <%= form_tag do %>
    <%= search_field_tag :party_identifier, 'Party Identifier' %>
    <%= submit_tag 'Go!' %>
    <% end %>

  </div>

  <div>
    <a href="parties/new">Create a Party</a>
  </div>
</div>

